root = true

# All files
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# F# files
[*.{fs,fsi,fsx}]
indent_size = 2

# C# files
[*.cs]
indent_size = 4

# Nix files
[*.nix]
indent_size = 2

# YAML/TOML files
[*.{yaml,yml,toml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML files
[*.{xml,fsproj}]
indent_size = 2
